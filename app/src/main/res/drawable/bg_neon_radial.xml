<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor"/>
        </shape>
    </item>
    <!-- Cyan glow top-left -->
    <item android:gravity="top|left">
        <shape android:shape="oval">
            <size android:width="600dp" android:height="600dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:startColor="#1A00E5FF"
                android:centerColor="#0D00E5FF"
                android:endColor="#00000000"/>
        </shape>
    </item>
    <!-- Magenta glow bottom-right -->
    <item android:gravity="bottom|right">
        <shape android:shape="oval">
            <size android:width="600dp" android:height="600dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="300dp"
                android:startColor="#1AFF00E5"
                android:centerColor="#0DFF00E5"
                android:endColor="#00000000"/>
        </shape>
    </item>
</layer-list>
