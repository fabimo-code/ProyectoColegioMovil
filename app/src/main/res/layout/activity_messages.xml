<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    tools:context=".MessagesActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/color_iconos_2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/anuncios"
            android:textAppearance="@style/TextAppearance.TitlePrimary"
            android:gravity="center" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notification"
            app:tint="@color/color_iconos_2" />

    </LinearLayout>

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fondo"
        app:tabTextColor="@color/color_texto_guia"
        app:tabSelectedTextColor="@color/color_titulos_internos"
        app:tabIndicatorColor="@color/color_titulos_internos"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HOY Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hoy"
                android:textAppearance="@style/TextAppearance.TitleSecondary"
                android:layout_marginBottom="12dp" />

            <!-- Matemáticas Announcement -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/color_fondo_notificacion">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="MA"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:background="@color/color_principal"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/matematicas"
                            android:textAppearance="@style/TextAppearance.TitleSecondary"
                            android:textColor="@color/color_letra" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/claro_envio"
                            android:textAppearance="@style/TextAppearance.Body"
                            android:textColor="@color/color_letra" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:30 a.m"
                        android:textAppearance="@style/TextAppearance.Guide"
                        android:textColor="@color/color_texto_guia" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Historia Announcement -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/color_fondo_notificacion">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="HI"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:background="@color/color_iconos_1"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/historia"
                            android:textAppearance="@style/TextAppearance.TitleSecondary"
                            android:textColor="@color/color_letra" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_olviden_ensayo"
                            android:textAppearance="@style/TextAppearance.Body"
                            android:textColor="@color/color_letra" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:45 a.m"
                        android:textAppearance="@style/TextAppearance.Guide"
                        android:textColor="@color/color_texto_guia" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- AYER Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ayer"
                android:textAppearance="@style/TextAppearance.TitleSecondary"
                android:layout_marginBottom="12dp" />

            <!-- Química Announcement -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/color_fondo_notificacion">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="Q"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:background="@color/color_principal"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Química"
                            android:textAppearance="@style/TextAppearance.TitleSecondary"
                            android:textColor="@color/color_letra" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resultados_laboratorio"
                            android:textAppearance="@style/TextAppearance.Body"
                            android:textColor="@color/color_letra" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04:15 p.m"
                        android:textAppearance="@style/TextAppearance.Guide"
                        android:textColor="@color/color_texto_guia" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 10 DE OCTUBRE Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/octubre_10"
                android:textAppearance="@style/TextAppearance.TitleSecondary"
                android:layout_marginBottom="12dp" />

            <!-- Ciencias naturales Announcement -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/color_fondo_notificacion">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:text="CI"
                        android:textColor="@color/white"
                        android:textAppearance="@style/TextAppearance.Body"
                        android:background="@color/color_check_positivo"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ciencias_naturales"
                            android:textAppearance="@style/TextAppearance.TitleSecondary"
                            android:textColor="@color/color_letra" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/recordatorio_practica"
                            android:textAppearance="@style/TextAppearance.Body"
                            android:textColor="@color/color_letra" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00 a.m"
                        android:textAppearance="@style/TextAppearance.Guide"
                        android:textColor="@color/color_texto_guia" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
